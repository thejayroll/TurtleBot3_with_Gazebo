# Clone packages
git clone -b humble https://github.com/ros2-gbp/turtlebot3-release.git
git clone -b humble https://github.com/ros2-gbp/turtlebot3_msgs-release.git
git clone -b humble https://github.com/ros2-gbp/turtlebot3_simulations-release.git

# Build
colcon build --symlink-install

# Environment
echo "source ~/ros2_ws/install/setup.bash" >> ~/.bashrc
echo "export TURTLEBOT3_MODEL=burger" >> ~/.bashrc
source ~/.bashrc

### RUN:


# Terminal 1: Simulation
source ~/ros2_ws/install/setup.bash
export TURTLEBOT3_MODEL=burger
ros2 launch turtlebot3_gazebo turtlebot3_world.launch.py

# Terminal 2: Teleop
source ~/ros2_ws/install/setup.bash
export TURTLEBOT3_MODEL=burger
ros2 run teleop_twist_keyboard teleop_twist_keyboard
